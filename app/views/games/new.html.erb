<h1>New game</h1>

<ul class="letter-list">
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<form action="/score" method="POST" class="input-group">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag 'letters', @letters %>
  <%= text_field_tag 'word', nil, class: 'form-control' %>
  <input type="submit" value="Play" class="btn btn-light">
</form>
